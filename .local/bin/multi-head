#!/bin/sh

xrandr \
  --output DisplayPort-2 --primary --mode 2560x1440 --pos 1440x389 --rotate normal \
  --output DisplayPort-3 --mode 2560x1440 --pos 0x0 --rotate left \
  --output DisplayPort-1 --off \
  --output DisplayPort-0 --off \
  --output HDMI-A-0 --off \
  --output DisplayPort-4 --off

xrandr --dpi 133.51 
